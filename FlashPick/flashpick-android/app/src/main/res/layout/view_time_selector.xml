<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:text="手动设置录制时长"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <Space android:layout_width="match_parent" android:layout_height="16dp"/>

        <TextView
            android:id="@+id/tvPreTime"
            android:text="保留前 30 秒"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            
        <SeekBar
            android:id="@+id/seekBarPre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="120"
            android:progress="30"
            android:paddingVertical="8dp"/>

        <Space android:layout_width="match_parent" android:layout_height="12dp"/>

        <TextView
            android:id="@+id/tvPostTime"
            android:text="录制后 10 秒"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:id="@+id/seekBarPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60"
            android:progress="10"
            android:paddingVertical="8dp"/>

        <Space android:layout_width="match_parent" android:layout_height="24dp"/>

        <Button
            android:id="@+id/btnConfirm"
            android:text="开始录制"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>

