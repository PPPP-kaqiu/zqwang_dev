{
  "manifest_version": 3,
  "name": "AutoResume Filler",
  "version": "1.1",
  "description": "Automatically fill resume on jobs.bytedance.com",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open AutoResume Sidebar"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://jobs.bytedance.com/campus/resume/edit*"],
      "js": ["content.js"]
    }
  ]
}